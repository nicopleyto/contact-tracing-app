<h1 class="text-3xl mb-4 font-bold text-gray-900">COVID-19 Contact Tracing Form</h1>

<%= form_with(model: @customer) do |form| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% @customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :mobile_number %>
    <%= form.telephone_field :mobile_number %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>
